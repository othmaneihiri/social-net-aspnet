@model PhonebookMVC.ViewModels.Publications.PublicationsListVM

@{
    ViewBag.Title = "Publications";
}

<h2>Publications</h2>

<p>
    @Html.ActionLink("Create New", "CreateEdit", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            Titre
        </th>
        <th>
            Context
        </th>
       
        <th></th>

    </tr>

    @foreach (var item in Model.Entities)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Context)
            </td>
           
            <td>
                @Html.ActionLink("Edit", "CreateEdit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
